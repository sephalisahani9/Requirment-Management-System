<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Form</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: royalblue;
        }

        .navbar-nav .nav-link {
            color: black;
        }

        .card {
            margin: 80px auto;
            padding: 20px;
            max-width: 1000px;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-control {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-royalblue border-bottom box-shadow mb-10">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Recruitment Management System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                </div>
            </div>
        </nav>
    </header>





    <!-- Header with Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-royalblue">
        <div class="container-fluid">
            @* <a class="navbar-brand" href="#">Recruitment Management System</a> *@
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        @* <a class="nav-link active" aria-current="page" href="#">Home</a> *@
                        @Html.ActionLink("Exam", "ExamName", "Home", null, new { @class = "nav-link" })

                    </li>
                    <li class="nav-item">
                        @* <a class="nav-link active" aria-current="page" href="#">Home</a> *@
                        @Html.ActionLink("Specialisation", "Specialisation", "Home", null, new { @class = "nav-link" })

                    </li>
                    <li class="nav-item">
                        @*  <a class="nav-link" href="#">About</a> *@
                        @Html.ActionLink("Category", "Category", "Home", null, new { @class = "nav-link" })

                    </li>
                    <li class="nav-item">
                        @* <a class="nav-link" href="#">Contact</a> *@
                        @Html.ActionLink("PWD", "PWD", "Home", null, new { @class = "nav-link" })

                    </li>
                    <li class="nav-item">
                        @* <a class="nav-link" href="#">Contact</a> *@
                        @Html.ActionLink("Maratial Status", "MaratialStatus", "Home", null, new { @class = "nav-link" })

                    </li>
                    <li class="nav-item">
                        @* <a class="nav-link" href="#">Contact</a> *@
                        @Html.ActionLink("Advertisment", "Advertisment", "Home", null, new { @class = "nav-link" })

                    </li>
                    <li class="nav-item">
                        @* <a class="nav-link" href="#">Contact</a> *@
                        @Html.ActionLink("Post", "PostMaster", "Home", null, new { @class = "nav-link" })


                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

